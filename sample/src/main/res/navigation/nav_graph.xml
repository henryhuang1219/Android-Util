<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/utils_fragment">

    <fragment
        android:id="@+id/utils_fragment"
        android:name="me.lazy_assedninja.sample.ui.utils_list.UtilsFragment"
        android:label="@string/navigation_utils_fragment"
        tools:layout="@layout/fragment_utils">

        <action
            android:id="@+id/toEncryptFragment"
            app:destination="@id/encrypt_fragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/encrypt_fragment"
        android:name="me.lazy_assedninja.sample.ui.encrypt.EncryptFragment"
        android:label="@string/navigation_encrypt_fragment"
        tools:layout="@layout/fragment_encrypt" />
</navigation>