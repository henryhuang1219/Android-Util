<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.lazy_assedninja.util">

    <application
        android:name="me.lazy_assedninja.util.application.MyApplication"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Util">

        <activity
            android:name="me.lazy_assedninja.util.ui.splash.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.Splash">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="me.lazy_assedninja.util.ui.index.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="stateVisible|adjustResize" />
    </application>
</manifest>